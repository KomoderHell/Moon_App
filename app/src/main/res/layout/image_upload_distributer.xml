<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".RetailerRegShopPicUploadActivity">

    <include
        android:id="@+id/toolbar_distributer_registration"
        layout="@layout/toolbar_distributer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_distributer_registration">

        <TextView
            android:id="@+id/editTextNoOfPieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="104dp"
            android:fontFamily="@font/lato"
            android:text="Upload"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_1_start"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="#CFCFCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNoOfPieces" />




        <ImageView
            android:id="@+id/UploadBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/view_1_start"
            app:layout_constraintTop_toBottomOf="@+id/view_1_start"
            app:srcCompat="@drawable/upload" />

        <TextView
            android:id="@+id/textViewAddImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add LOGO"
            android:layout_marginStart="16dp"
            android:textColor="#7C7878"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/UploadBtn1"
            app:layout_constraintStart_toEndOf="@+id/UploadBtn1"
            app:layout_constraintTop_toTopOf="@+id/UploadBtn1" />

        <View
            android:id="@+id/view_2_start"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="#CFCFCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UploadBtn1" />



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/green_tick"
            app:layout_constraintTop_toTopOf="@id/textViewAddImg1"
            app:layout_constraintBottom_toBottomOf="@id/textViewAddImg1"
            app:layout_constraintStart_toEndOf="@id/textViewAddImg1"/>

        <Button
            android:id="@+id/buttonNextDistributerAdd1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="212dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/tab_1"
            android:fontFamily="@font/lato"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_2_start"
            app:layout_constraintVertical_bias="0.05" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
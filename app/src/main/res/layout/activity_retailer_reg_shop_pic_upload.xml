<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".RetailerRegShopPicUploadActivity">

    <include
        android:id="@+id/toolbar_retailer_registration"
        layout="@layout/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_retailer_registration">

        <TextView
            android:id="@+id/textView_profile_pic"
            android:layout_width="wrap_content"
            android:text="Add shop images"
            android:textSize="18dp"
            android:fontFamily="@font/lato"
            android:textColor="#000000"
            android:layout_marginStart="32dp"
            android:layout_marginTop="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="#CFCFCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_profile_pic" />





        <Button
            android:id="@+id/buttonFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/tab_1"
            android:fontFamily="@font/lato"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_profile_pic" />

        <ImageView
            android:id="@+id/imageViewAddImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:srcCompat="@drawable/camera" />

        <TextView
            android:id="@+id/textViewAddImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add image"
            android:layout_marginStart="16dp"
            android:textColor="#7C7878"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewAddImg1"
            app:layout_constraintStart_toEndOf="@+id/imageViewAddImg1"
            app:layout_constraintTop_toTopOf="@+id/imageViewAddImg1" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="#CFCFCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAddImg1" />

        <ImageView
            android:id="@+id/imageViewAddImg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/imageViewAddImg1"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:srcCompat="@drawable/camera" />

        <TextView
            android:id="@+id/textViewAddImg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add image"
            android:layout_marginStart="16dp"
            android:textColor="#7C7878"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewAddImg2"
            app:layout_constraintStart_toEndOf="@+id/imageViewAddImg2"
            app:layout_constraintTop_toTopOf="@+id/imageViewAddImg2" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="#CFCFCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAddImg2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/green_tick"
            app:layout_constraintTop_toTopOf="@id/textViewAddImg1"
            app:layout_constraintBottom_toBottomOf="@id/textViewAddImg1"
            app:layout_constraintStart_toEndOf="@id/textViewAddImg1"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/green_tick"
            app:layout_constraintTop_toTopOf="@id/textViewAddImg2"
            app:layout_constraintBottom_toBottomOf="@id/textViewAddImg2"
            app:layout_constraintStart_toEndOf="@id/textViewAddImg2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical"
    tools:context=".RetailerRegistrationActivity">

    <include
        android:id="@+id/toolbar_distributer_registration"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="24dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="54dp">

                <EditText
                    android:id="@+id/editTextStdPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_marginBottom="16dp"
                    android:hint="Shop Name"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:textColorHint="#717171" />

                <EditText
                    android:id="@+id/editTextQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_marginBottom="16dp"
                    android:hint="GST Nmuber (OPTIONAL)"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:textColorHint="#717171"/>

                <Spinner
                    android:id="@+id/editTextMRP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/lato"
                    android:hint="Nature of Bussiness"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:textColorHint="#717171"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">

                    <CheckBox
                        android:id="@+id/checkBoxTnC2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/lato"
                        android:text="I accept all the "
                        android:textColor="#4F4D4D"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/textViewTnC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms and Conditions"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/lato"/>

                </LinearLayout>

                <Button
                    android:id="@+id/buttonNextDistributerAdd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_1"
                    android:fontFamily="@font/lato"
                    android:text="Next"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="54dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>


</LinearLayout>
